---
import Link from './Link.astro';
import ExternalLinkIcon from '../../assets/icons/external-link.svg';

interface Props {
	href: string;
	[key: string]: any;
}

const { href, ...attrs } = Astro.props;
---

<Link href={href} {...attrs}>
	<slot />
	<img src={ExternalLinkIcon.src} alt="外部リンク" />
</Link>

<style>
	img {
		display: inline-block;
		height: 1em;
	}
</style>
